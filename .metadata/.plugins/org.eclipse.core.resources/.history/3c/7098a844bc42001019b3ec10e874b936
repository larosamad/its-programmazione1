package _05_arraylist;

import java.time.LocalDate;
import java.util.ArrayList;

public class Main {

    static ArrayList<Product> productsList = new ArrayList<>();

    public static void main(String[] args) {
        Product mozzarella = new Product("Mozzarella", "Santa Lucia", 3.2, LocalDate.of(2025, 8, 1));
        productsList.add(mozzarella);

        Product pomodoro = new Product("Pomodoro", "San Marzano", 2.0, LocalDate.of(2025, 2, 1));
        productsList.add(pomodoro);

        for (Product prodotto : productsList) {
            System.out.println(prodotto);
        }

        System.out.println("\n*****\n");

        LocalDate oggi = LocalDate.now();
        boolean scaduti = isExpired(oggi);

        System.out.println("Ci sono prodotti scaduti? " + scaduti);
    }

    // Metodo per controllare se esistono prodotti scaduti
    public static boolean isExpired(LocalDate dataAttuale) {
        for (Product prodotto : productsList) {
            if (prodotto.getScadenza().isBefore(dataAttuale)) {
                return true;
            }
        }
        return false;
    }
}